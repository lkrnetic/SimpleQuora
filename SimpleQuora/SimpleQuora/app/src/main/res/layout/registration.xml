<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_prijava"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registracija"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="@dimen/naslov"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="@dimen/margina_ispod_naslova"/>
    <TextView
        android:id="@+id/tv_korisnicko_ime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Korisničko ime"
        android:layout_below="@id/tv_prijava"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/tv_ispod_naslova"/>
    <EditText
        android:id="@+id/et_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@id/tv_korisnicko_ime"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/tv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Šifra"
        android:layout_below="@id/et_username"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/tv_ispod_naslova"
        />
    <EditText
        android:id="@+id/et_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_below="@id/tv_password"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/tv_password_potvrdi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Potvrda šifre"
        android:layout_below="@id/et_password"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/tv_ispod_naslova"
        />
    <EditText
        android:id="@+id/et_password_potvrdi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_below="@id/tv_password_potvrdi"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/btn_registracija"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registracija"
        android:layout_below="@id/et_password_potvrdi"
        android:layout_centerHorizontal="true"
        android:onClick="registration"
        android:layout_marginTop="10dp"
        />
</RelativeLayout>