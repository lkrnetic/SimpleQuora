<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_create_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kreiraj pitanje"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/naslov_pitodg"
        />

    <EditText
        android:id="@+id/et_create_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:layout_below="@id/tv_create_question"
        />

    <Button
        android:id="@+id/bt_create_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Potvrdi"
        android:layout_below="@id/et_create_question"
        android:onClick="createQuestion"

        />
</RelativeLayout>
